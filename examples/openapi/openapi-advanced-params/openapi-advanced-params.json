{
  "openapi": "3.0.0",
  "info": {
    "title": "Advanced Parameters API",
    "version": "1.0.0",
    "description": "Demonstrates Header and Cookie parameters"
  },
  "paths": {
    "/secure-resource": {
      "get": {
        "summary": "Resource with header and cookie params",
        "parameters": [
          {
            "name": "X-API-Key",
            "in": "header",
            "description": "API Key for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "session_id",
            "in": "cookie",
            "description": "User session identifier",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Access granted"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  }
}
